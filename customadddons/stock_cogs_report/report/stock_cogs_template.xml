<odoo>
    <template id="report_stock_cogs">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <h2>COGS Report</h2>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Opening Value</th>
                            <th>Purchases</th>
                            <th>Closing Value</th>
                            <th>COGS</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.get_cogs_data(o.date_from, o.date_to)" t-as="line">
                            <tr>
                                <td><t t-esc="line['product']"/></td>
                                <td><t t-esc="line['opening_value']"/></td>
                                <td><t t-esc="line['purchase_value']"/></td>
                                <td><t t-esc="line['closing_value']"/></td>
                                <td><t t-esc="line['cogs']"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </t>
    </template>
</odoo>
