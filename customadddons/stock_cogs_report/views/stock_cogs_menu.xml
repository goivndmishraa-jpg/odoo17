<odoo>
    <record id="view_stock_cogs_report_form" model="ir.ui.view">
        <field name="name">stock.cogs.report.form</field>
        <field name="model">stock.cogs.report</field>
        <field name="arch" type="xml">
            <form string="COGS Report">
                <group>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button name="action_download_excel"
                            string="Download Excel"
                            type="object"
                            class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_cogs_report" model="ir.actions.act_window">
        <field name="name">COGS Report</field>
        <field name="res_model">stock.cogs.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_stock_cogs_report"
              name="COGS Report"
              parent="stock.menu_stock_root"
              action="action_stock_cogs_report"/>
</odoo>
