<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="estate_property_tree_veiw" model="ir.ui.view">
            <field name="name">estate.property.tree</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="property_type_id"/>
                    <field name="property_tag_ids"/>
                    <field name="postcode" />
                    <field name="date_availability" />
                    <field name="expecteed_price" />
                    <field name="best_offer" />
                    <field name="selling_price" />
                    <field name="ramdomarea"/>
                </tree>
            </field>
        </record>
        <record id="estate_property_form_veiw" model="ir.ui.view"> 
            <field name="name">estate.property.form</field>
            <field name="model">estate.property</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" />
                            <group>
                                <field name="property_type_id"/>
                                <field name="property_tag_ids" widget="many2many_tags"/>
                                <field name="postcode" />
                                <field name="date_availability" />
                            </group>
                            <group>
                                <field name="expecteed_price" />
                                <field name="best_offer" />
                                <field name="selling_price" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                    <field name="bedrooms"/>
                                    <field name="living_area"/>
                                    <field name="facades"/>
                                    <field name="garage"/>
                                    <field name="garden"/>
                                    <field name="garden_area"/>
                                    <field name="gardern_orientation"/>
                                    <field name="totalarea"  />
                                </group>
                            </page>
                            <page  string="offers">
                                <field name="property_offers_id"  >
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="price"/>
                                        <field name="Validity"/>
                                        <field name="deadline"/>
                                        
                                    </tree>
                                    
                                </field>
                            </page>
                            <page string="other info">
                                <group>
                                    <field name="salesperson"/>
                                    <field name="customer" />
                                    <field name="Taxid" />
                                </group>
                               
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>

        </record>
        <record id="action_property" model="ir.actions.act_window">
            <field name="name">Propertyyyyy</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="estate_property_tree_veiw"></field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                     Create a property
                </p>
            </field>
        </record>
    </data>
</odoo>
