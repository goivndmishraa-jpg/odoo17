<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_sale_order_filter_inherit_custom" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.custom.filters</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.sale_order_view_search_inherit_quotation"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_quotation']" position="after">

                <filter string="High Value Orders"
                        name="high_value_orders"
                        domain="[('amount_total', '>', 10000)]"
                        group=""/>

                <filter string="Unconfirmed Quotations"
                        name="unconfirmed_orders"
                        domain="[('state', '=', 'draft')]"/>

                <filter string="Confirmed Orders"
                        name="confirmed_orders"
                        domain="[('state', '=', 'sale')]"/>

            </xpath>
        </field>
    </record>
</odoo>
