<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit main sale order search view -->
    <record id="view_sale_order_filter_inherit_custom" model="ir.ui.view">
        <field name="name">sale.order.search.inherit.custom.filters_definition</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">

            <filter name="my_sale_orders_filter" position="after">

                <filter string="High Value Orders"
                        name="high_value_orders"
                        domain="[('amount_total', '>', 10000)]"/>

                <filter string="Unconfirmed Quotations"
                        name="unconfirmed_orders"
                        domain="[('state', '=', 'draft')]"/>

                <filter string="Confirmed Orders"
                        name="confirmed_orders"
                        domain="[('state', '=', 'sale')]"
                        groups="sales_team.group_sale_manager"/>

            </filter>
        </field>
    </record>
</odoo>
